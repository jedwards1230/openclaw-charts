{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(helm lint:*)",
      "Bash(helm template:*)",
      "Bash(helm package:*)",
      "Bash(helm show:*)",
      "Bash(helm dependency:*)",
      "Bash(ct:*)",
      "Bash(./scripts/bump-version.sh:*)",
      "Bash(docker build:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(yq:*)",
      "Bash(jq:*)",
      "Bash(diff:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Skill"
    ]
  },
  "enabledPlugins": {
    "superpowers@ccplugins": true
  },
  "extraKnownMarketplaces": {
    "ccplugins": {
      "source": {
        "source": "github",
        "repo": "ccplugins/marketplace"
      }
    }
  }
}